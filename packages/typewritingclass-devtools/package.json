{
  "name": "typewritingclass-devtools",
  "displayName": "typewritingclass CSS Preview",
  "description": "Inline CSS preview for typewritingclass utilities",
  "version": "0.1.5",
  "publisher": "corysimmons",
  "license": "MIT",
  "keywords": [
    "typewritingclass",
    "vscode",
    "css-preview",
    "devtools",
    "intellisense"
  ],
  "homepage": "https://github.com/corysimmons/typewritingclass",
  "bugs": "https://github.com/corysimmons/typewritingclass/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/corysimmons/typewritingclass",
    "directory": "packages/typewritingclass-devtools"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:javascript",
    "onLanguage:javascriptreact"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "typewritingclass CSS Preview",
      "properties": {
        "typewritingclass.enableHoverPreview": {
          "type": "boolean",
          "default": true,
          "description": "Enable inline CSS preview on hover for typewritingclass utility calls."
        },
        "typewritingclass.showPropertyNames": {
          "type": "boolean",
          "default": true,
          "description": "Show CSS property names in hover previews."
        }
      }
    }
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "package": "vsce package",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "typescript": "^5.7.3"
  }
}
