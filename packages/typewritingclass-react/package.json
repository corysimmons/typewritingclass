{
  "name": "typewritingclass-react",
  "version": "0.2.6",
  "description": "React bindings for typewritingclass with dynamic style support",
  "license": "MIT",
  "type": "module",
  "keywords": [
    "typewritingclass",
    "react",
    "hooks",
    "css-in-js",
    "styling"
  ],
  "homepage": "https://github.com/corysimmons/typewritingclass",
  "bugs": "https://github.com/corysimmons/typewritingclass/issues",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/corysimmons/typewritingclass",
    "directory": "packages/typewritingclass-react"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./server": {
      "import": {
        "types": "./dist/server.d.ts",
        "default": "./dist/server.js"
      },
      "require": {
        "types": "./dist/server.d.cts",
        "default": "./dist/server.cjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "peerDependencies": {
    "react": "^18 || ^19",
    "typewritingclass": "workspace:*"
  },
  "devDependencies": {
    "react": "^19.0.0",
    "@types/react": "^19.0.0",
    "vitest": "^3.0.4",
    "typescript": "^5.7.3",
    "typewritingclass": "workspace:*"
  }
}
