{
  "name": "typewritingclass-compiler",
  "version": "0.2.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/corysimmons/typewritingclass",
    "directory": "packages/typewritingclass-compiler"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json",
    "./loadTheme": {
      "import": {
        "types": "./dist/loadTheme.d.ts",
        "default": "./dist/loadTheme.js"
      },
      "require": {
        "types": "./dist/loadTheme.d.cts",
        "default": "./dist/loadTheme.cjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["dist", "index.node", "index.d.ts"],
  "scripts": {
    "build": "tsup",
    "build:native": "napi build --release",
    "build:native:debug": "napi build",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "napi": {
    "name": "index",
    "triples": {}
  },
  "peerDependencies": {
    "vite": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": true
    }
  },
  "dependencies": {
    "magic-string": "^0.30.21",
    "typewritingclass": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "typescript": "^5.7.3",
    "vite": "^6.0.0"
  }
}
