{
  "name": "typewritingclass-next",
  "version": "0.2.4",
  "description": "Next.js integration for typewritingclass with SSR and static extraction",
  "license": "MIT",
  "type": "module",
  "keywords": [
    "typewritingclass",
    "nextjs",
    "next",
    "ssr",
    "react-server-components",
    "css"
  ],
  "homepage": "https://github.com/corysimmons/typewritingclass",
  "bugs": "https://github.com/corysimmons/typewritingclass/issues",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/corysimmons/typewritingclass",
    "directory": "packages/typewritingclass-next"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./plugin": {
      "import": {
        "types": "./dist/plugin.d.ts",
        "default": "./dist/plugin.js"
      },
      "require": {
        "types": "./dist/plugin.d.cts",
        "default": "./dist/plugin.cjs"
      }
    },
    "./loader": {
      "import": {
        "types": "./dist/loader.d.ts",
        "default": "./dist/loader.js"
      },
      "require": {
        "types": "./dist/loader.d.cts",
        "default": "./dist/loader.cjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "peerDependencies": {
    "next": "^13 || ^14 || ^15",
    "react": "^18 || ^19",
    "typewritingclass": "workspace:*",
    "typewritingclass-react": "workspace:*"
  },
  "dependencies": {
    "typewritingclass-compiler": "workspace:*"
  },
  "devDependencies": {
    "next": "^15.0.0",
    "react": "^19.0.0",
    "@types/react": "^19.0.0",
    "typescript": "^5.7.3",
    "typewritingclass": "workspace:*",
    "typewritingclass-react": "workspace:*"
  }
}
