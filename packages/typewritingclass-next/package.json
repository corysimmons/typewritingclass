{
  "name": "typewritingclass-next",
  "version": "0.1.3",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/corysimmons/typewritingclass",
    "directory": "packages/typewritingclass-next"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./plugin": {
      "import": {
        "types": "./dist/plugin.d.ts",
        "default": "./dist/plugin.js"
      },
      "require": {
        "types": "./dist/plugin.d.cts",
        "default": "./dist/plugin.cjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["dist"],
  "scripts": {
    "build": "tsup"
  },
  "peerDependencies": {
    "next": "^13 || ^14 || ^15",
    "react": "^18 || ^19",
    "typewritingclass": "workspace:*",
    "typewritingclass-react": "workspace:*"
  },
  "dependencies": {
    "typewritingclass-babel": "workspace:*"
  },
  "devDependencies": {
    "next": "^15.0.0",
    "react": "^19.0.0",
    "@types/react": "^19.0.0",
    "typescript": "^5.7.3",
    "typewritingclass": "workspace:*",
    "typewritingclass-react": "workspace:*"
  }
}
